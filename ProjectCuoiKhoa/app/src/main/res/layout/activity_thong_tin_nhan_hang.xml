<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongTinNhanHangActivity"
    android:orientation="vertical"
    android:background="#EBE4F3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#BF1818"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgBackTTNH"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Thông tin nhận hàng"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ACA3A3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/background_white_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tvSua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="[ Sửa ]"
                android:textColor="#BF1818"
                android:textSize="20dp"
                android:visibility="visible"
                android:gravity="center|right"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvThem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="[ Thêm địa chỉ ]"
                android:textColor="#BF1818"
                android:textSize="20dp"
                android:visibility="invisible" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>